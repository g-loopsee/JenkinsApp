pipeline {
    agent any
    
    stages {
        
        stage('Build') {
            steps {
                dir("${env.WORKSPACE}/JenkinsApp") {
                                    bat 'dir'
                                        script {
                                        bat 'docker build -t jenkinsapp -f Dockerfile .'
                                        bat 'docker run jenkinsapp'
                                    }
                                }
            }
        }
        
        stage('Archive') {
            steps {
                 bat 'copy /y "JenkinsApp\\bin\\Release\\net7.0\\JenkinsApp.exe" "%WORKSPACE%"'
            }
        }
    }
}
