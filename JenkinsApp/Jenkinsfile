pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/g-loopsee/JenkinsApp.git'
            }
        }
        
        stage('Build') {
            steps {
                script {
                    def customImage = docker.build('my-custom-image')
                    customImage.inside {
                        sh 'dotnet build --configuration Release'
                    }
                }
            }
        }
        
        stage('Archive') {
            steps {
                archiveArtifacts artifacts: 'bin/Release/JenkinsApp.exe', fingerprint: true
            }
        }
    }
}