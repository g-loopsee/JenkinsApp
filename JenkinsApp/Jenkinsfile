pipeline {
    agent any
    
    stages {
        
        stage('Build') {
            steps {
                dir("${env.WORKSPACE}/JenkinsApp") {
                                    bat 'dir'
                                        script {
                                        bat 'docker build -t jenkinsapp -f Dockerfile .'
                                        bat 'docker run jenkinsapp'
                                    }
                                }
            }
        }
        
        stage('Archive') {
            steps {
                  archiveArtifacts artifacts: 'bin/Release/JenkinsApp.exe', fingerprint: true
            }
        }
    }
}
