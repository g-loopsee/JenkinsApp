pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/g-loopsee/JenkinsApp.git'
            }
        }
        
        stage('Build') {
            steps {
                script {
                    def workspacePath = pwd()
                    sh "docker run -v ${workspacePath}:/app -w /app mcr.microsoft.com/dotnet/sdk:7.0 dotnet build --configuration Release"
                }
            }
        }
        
        stage('Archive') {
            steps {
                archiveArtifacts artifacts: 'bin/Release/JenkinsApp.exe', fingerprint: true
            }
        }
    }
}